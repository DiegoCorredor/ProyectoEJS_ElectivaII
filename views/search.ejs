<!DOCTYPE html>
<html lang="en">

<head>
    <%-include('./templates/header')%>
</head>

<body>
    <div class="container-fluid position-absolute top-50 start-50 translate-middle">
        <div class="container my-5 text-center rounded border border-dark back px-3 py-5">
            <h1 class="text-center">Consulta de reserva de prestamo</h1>
            <hr>
            <div class="row">
                <div class="col">
                    <%if(temp.length > 0){%>
                       <p class="fs-5 ">Hay un total de <strong><%=temp.length%></strong> registros</p>
                
                        <table class="table table-striped table-hover bg-light">
                            <thead>
                                <th>Id</th>
                                <th>Persona</th>
                                <th>Placa</th>
                                <th>Fecha de reserva</th>
                                <th>Fecha de entrega</th>
                                <th>Observaciones</th>
                            </thead>
                            <tbody>
                                <%temp.forEach(temp =>{%>
                                    <tr>
                                        <td><%=temp.id%></td>
                                        <td><%=temp.persons%></td>
                                        <td><%=temp.car%></td>
                                        <td><%=temp.booking%></td>
                                        <td><%=temp.delivery%></td>
                                        <td><%=temp.observations%></td>
                                    </tr>                        
                                    <%})%>
                            </tbody>
                        </table>
                    <%}else{%>
                        No hay registros
                    <%}%>
                </div>
            </div>
            <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                <a href="/" class="btn btn-primary"><i class="fas fa-home"></i>  Inicio</a>
            </div>
            <hr>
        <%-include('./templates/authors')%>
        </div>
        <%-include('./templates/footer')%>
</body>

</html>